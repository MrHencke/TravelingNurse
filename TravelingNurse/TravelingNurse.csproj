<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

	<ItemGroup>
		<Content Include="Instances\**\*">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>	
	<ItemGroup>
	  <PackageReference Include="BetterConsoles.Colors" Version="1.1.1" />
	  <PackageReference Include="BetterConsoles.Core" Version="1.2.0" />
	  <PackageReference Include="BetterConsoleTables" Version="2.0.4-rc1" />
	  <PackageReference Include="ScottPlot" Version="4.1.61" />
	  <PackageReference Include="WeightedRandomizer" Version="2.0.1" />
	</ItemGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<NoWarn>IDE0051</NoWarn>
		<NoWarn>IDE0060</NoWarn>
		<NoWarn>CS8618</NoWarn>
	</PropertyGroup>
</Project>
